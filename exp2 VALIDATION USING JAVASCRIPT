login.html
<!DOCTYPE html>
<html>
<body bgcolor="blue"><br><br><br>

<script>
function validate() {
    var id = document.myform.id.value.trim();
    var pwd = document.myform.pwd.value.trim();

    if(id === "" || pwd === "") {
        alert("Login ID and Password must be filled!");
    } else {
        alert("VALID INPUT");
        window.location.href = "catalog.html";
    }
}
</script>

<form name="myform">
<div align="center">
    LOGIN ID: <input type="text" name="id"><br><br>
    PASSWORD: <input type="password" name="pwd"><br><br>

    <input type="button" value="OK" onclick="validate()">
    <input type="reset" value="CLEAR">
</div>
</form>

</body>
</html>

reg.html
<!DOCTYPE html>
<html>
<body bgcolor="blue"><br><br>

<script>
function validate() {
    var name = document.myform.name.value.trim();
    var addr = document.myform.addr.value.trim();
    var ph = document.myform.phno.value.trim();
    var id = document.myform.id.value.trim();
    var pwd = document.myform.pwd.value.trim();

    if (name=="" || addr=="" || ph=="" || id=="" || pwd=="") {
        alert("All fields are required!");
        return false;
    }

    if(isNaN(ph)) {
        alert("Phone number must be numeric!");
        return false;
    }

    alert("REGISTRATION SUCCESSFUL");
    return true;
}
</script>

<form name="myform" onsubmit="return validate()">
<div align="center">
<pre>
NAME           : <input type="text" name="name">
ADDRESS        : <input type="text" name="addr">
CONTACT NUMBER : <input type="text" name="phno">
LOGIN ID       : <input type="text" name="id">
PASSWORD       : <input type="password" name="pwd">
</pre>
<br>
<input type="submit" value="OK">
<input type="reset" value="CLEAR">
</div>
</form>

</body>
</html>

